{
  "name": "@ontic-labs/design-system",
  "version": "0.1.0",
  "description": "Ontic Labs design system - shared tokens, Tailwind preset, and CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./preset": {
      "import": "./dist/preset.js",
      "types": "./dist/preset.d.ts"
    },
    "./css": "./dist/tokens.css",
    "./css/tokens": "./dist/tokens.css",
    "./css/base": "./dist/base.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.0 || >=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tailwindcss": "^4",
    "tsup": "^8",
    "typescript": "^5"
  },
  "keywords": [
    "ontic",
    "design-system",
    "tailwind",
    "tokens"
  ],
  "author": "Ontic Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ontic-Labs/ontic-design-system.git"
  }
}
